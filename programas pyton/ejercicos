amount = float(input("多Cantidad a invertir? "))
interest =22,5
years = int(input("多A単os?"))
for i in range(years):
    amount *= 1 + interest / 100 
    print("Capital tras " + str(i+1) + " a単os: " + str(round(amount, 2)))